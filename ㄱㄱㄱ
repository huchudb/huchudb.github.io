function buildExtraConditionIndex(def) {
  const map = {};
  (def?.groups || []).forEach((g) => {
    (g.sections || []).forEach((s) => {
      (s.options || []).forEach((o) => {
        map[o.key] = {
          key: o.key,
          label: o.label,
          groupKey: g.key,
          groupLabel: g.label,
          sectionKey: s.key,
          sectionLabel: s.label,
          appliesTo: g.appliesTo
        };
      });
    });
  });
  return map;
}
const EXTRA_CONDITION_INDEX = buildExtraConditionIndex(EXTRA_CONDITIONS);

